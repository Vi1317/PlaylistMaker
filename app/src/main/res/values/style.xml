<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/main_text</item>
        <item name="android:layout_marginTop">@dimen/padding_14</item>
        <item name="android:layout_marginBottom">@dimen/padding_16</item>
    </style>

    <style name="main_menu_buttons" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">@dimen/padding_16</item>
        <item name="android:gravity">center</item>
        <item name="cornerRadius">16dp</item>

        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/main_text</item>
        <item name="android:textColor">@color/black</item>

        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/black</item>
        <item name="iconPadding">8dp</item>
    </style>

    <style name="settings_menu_element">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="settings_menu_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/menu_text</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:paddingBottom">21dp</item>
        <item name="android:paddingTop">21dp</item>
    </style>
</resources>