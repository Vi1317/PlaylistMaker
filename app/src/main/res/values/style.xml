<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="HeaderToolbar" parent="Widget.Material3.CollapsingToolbar.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="titleTextColor">?attr/colorOnPrimary</item>
        <item name="titleTextAppearance">@style/ToolbarText</item>
        <item name="android:layout_marginTop">@dimen/padding_14</item>
        <item name="android:layout_marginBottom">@dimen/padding_16</item>
        <item name="android:paddingStart">-16dp</item>
        <item name="android:paddingEnd">@dimen/padding_16</item>
        <item name="android:letterSpacing">0</item>
        <item name="navigationIconTint">?attr/colorOnPrimary</item>
    </style>

    <style name="ToolbarText" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">@dimen/main_text</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="MainMenuButtons" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">@dimen/padding_16</item>
        <item name="android:gravity">center</item>
        <item name="cornerRadius">16dp</item>

        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/main_text</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:letterSpacing">0</item>

        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/black</item>
        <item name="iconPadding">8dp</item>
    </style>

    <style name="TextSettingsElement">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical">20dp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="drawableTint">?attr/colorOnSecondary</item>
    </style>

    <style name="SwitchSettingsElement">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingVertical">20dp</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/ys_display_regular</item>
    </style>
</resources>